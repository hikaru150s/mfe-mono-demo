# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build api-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t api-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV API_SERVER_PORT=3000

WORKDIR /app

RUN addgroup --system api-server && \
          adduser --system -G api-server api-server

COPY dist/servers/api-server api-server/
RUN chown -R api-server:api-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix api-server --omit=dev -f install

EXPOSE $API_SERVER_PORT
CMD [ "node", "api-server" ]
